class Solution {
    public int minDepth(TreeNode root) {
        if(root==null) return 0;
        if(root.left==null && root.right==null){
            return 1;
        }
        int leftHeigth=minDepth(root.left);
        int rightHeigth=minDepth(root.right);
        if(root.left==null || root.right==null){ //condition to take care of
            return 1+Math.max(leftHeigth,rightHeigth);
        }
        return 1+Math.min(leftHeigth,rightHeigth); 
    }
}
