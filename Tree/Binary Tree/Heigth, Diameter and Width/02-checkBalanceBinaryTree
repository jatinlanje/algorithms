class Solution {
    public boolean isBalanced(TreeNode root) {
        boolean balance[]=new boolean[1];
        balance[0]=true;
        height(root,balance);
        return balance[0];
    }
    public int height(TreeNode root, boolean balance[]){
        if(root==null){
            return 0;
        }
        int leftHeight=height(root.left,balance);
        int rightHeight=height(root.right,balance);
        int difference=Math.abs(leftHeight-rightHeight);
        if(difference>1){
            balance[0]=false;
        }
        return 1+Math.max(leftHeight,rightHeight);
    }
}
